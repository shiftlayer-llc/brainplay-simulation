# ===========================================
# 4-Player Codenames Game Configuration
# ===========================================

# LLM API Keys (Required)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ===========================================
# Player Model Configuration
# ===========================================
# You can assign different models to each player for variety

# Player 1 (will be randomly assigned a role)
PLAYER1_MODEL=gpt-4
# Options: gpt-4, gpt-3.5-turbo, claude-3-5-sonnet-20241022, claude-3-haiku-20240307

# Player 2
PLAYER2_MODEL=gpt-4
# Options: gpt-4, gpt-3.5-turbo, claude-3-5-sonnet-20241022, claude-3-haiku-20240307

# Player 3
PLAYER3_MODEL=gpt-4
# Options: gpt-4, gpt-3.5-turbo, claude-3-5-sonnet-20241022, claude-3-haiku-20240307

# Player 4
PLAYER4_MODEL=gpt-4
# Options: gpt-4, gpt-3.5-turbo, claude-3-5-sonnet-20241022, claude-3-haiku-20240307

# ===========================================
# Game Configuration
# ===========================================

# ROS2 Domain ID (should be consistent across all nodes)
ROS_DOMAIN_ID=42

# Game Settings
GAME_TIMEOUT=1800  # 30 minutes in seconds
CLUE_TIMEOUT=120   # 2 minutes for spymaster to give clue
GUESS_TIMEOUT=60   # 1 minute for operative to make guess

# ===========================================
# Isaac Sim Integration (Optional)
# ===========================================
# Uncomment and configure if using Isaac Sim

# ISAAC_SIM_HOST=localhost
# ISAAC_SIM_PORT=8211
# ISAAC_ENABLED=true

# ===========================================
# Advanced Player Personalities (Optional)
# ===========================================
# These will be randomly assigned but you can create variations

# Risk tolerance: 0.0 = very conservative, 1.0 = very risky
# Creativity: 0.0 = basic strategies, 1.0 = creative strategies  
# Confidence: 0.0 = hesitant, 1.0 = confident

# Example personality configurations (not used by default)
# PLAYER1_RISK_TOLERANCE=0.8
# PLAYER1_CREATIVITY=0.9
# PLAYER1_CONFIDENCE=0.7

# PLAYER2_RISK_TOLERANCE=0.3
# PLAYER2_CREATIVITY=0.5
# PLAYER2_CONFIDENCE=0.6

# PLAYER3_RISK_TOLERANCE=0.6
# PLAYER3_CREATIVITY=0.8
# PLAYER3_CONFIDENCE=0.8

# PLAYER4_RISK_TOLERANCE=0.7
# PLAYER4_CREATIVITY=0.6
# PLAYER4_CONFIDENCE=0.5

# ===========================================
# Logging and Debug
# ===========================================
LOG_LEVEL=INFO
DEBUG_MODE=false
SAVE_GAME_LOGS=false

# ===========================================
# Web Interface
# ===========================================
WEB_PORT=8080
ENABLE_ADMIN_PANEL=true